<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".mvp.registration.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_auth"
            android:elevation="3dp"
            android:translationZ="3dp"
            style="@style/Toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:text="Регистрация"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/et_loginReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:inputType="textVisiblePassword"
            android:hint="Логин"
            android:textColorHint="@color/colorPrimaryDisable"
            android:background="@drawable/background_edit_text_with_green_border"
            android:elevation="5dp"/>

        <EditText
            android:id="@+id/et_passwordReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:hint="Пароль"
            android:textColorHint="@color/colorPrimaryDisable"
            android:background="@drawable/background_edit_text_with_green_border"
            android:elevation="5dp"/>

        <EditText
            android:id="@+id/et_replayPasswordReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:hint="Повторите пароль"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimaryDisable"
            android:background="@drawable/background_edit_text_with_green_border"
            android:elevation="5dp"/>

        <EditText
            android:id="@+id/et_emailReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:hint="Почта e-mail"
            android:textColorHint="@color/colorPrimaryDisable"
            android:background="@drawable/background_edit_text_with_green_border"
            android:elevation="5dp"/>

        <EditText
            android:id="@+id/et_phoneReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:inputType="phone"
            android:hint="Телефон"
            android:textColorHint="@color/colorPrimaryDisable"
            android:background="@drawable/background_edit_text_with_green_border"
            android:elevation="5dp"/>

        <EditText
            android:id="@+id/et_addressReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:hint="Адрес"
            android:gravity="top"
            android:lines="2"
            android:textColorHint="@color/colorPrimaryDisable"
            android:background="@drawable/background_edit_text_with_green_border"
            android:elevation="5dp"/>

        <Button
            android:id="@+id/signUpReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Зарегистрироваться"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>